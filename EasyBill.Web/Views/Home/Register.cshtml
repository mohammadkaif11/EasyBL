        <input type="text" name="UserName" id="UserName">
        <label for="Name">PhoneNumber</label>
        <input type="text" name="UserPhoneNumber" id="UserPhoneNumber">
        <label for="Name">ShopName</label>
        <input type="text" name="UserShopName" id="UserShopName">
        <label for="Name">Address</label>
        <input type="text" name="UserShopAddress" id="UserShopAddress">
